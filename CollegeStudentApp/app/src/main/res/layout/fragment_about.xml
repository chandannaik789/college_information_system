        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="1. To provide quality education to the students and prepare them to face the challenges of 21st century."
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size2"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/latoregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="2. To become a beacon of knowledge to the surrounding society and contribute to the overall development ot our nation and also try to retain its unique culture, ecosystem,flora and fauna etc."
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size2"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/latoregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/text_margin"
